<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- ImageView for the logo -->
    <ImageView
        android:id="@+id/myLogo"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:layout_alignParentTop="true"
        android:scaleType="centerInside"
        android:src="@drawable/mylogo"
        android:contentDescription="@string/myLogo_desc" />

    <!-- Tampilan hasil foto -->
    <ImageView
        android:id="@+id/imageViewResult"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="16dp"
        android:scaleType="centerCrop"
        android:background="@android:color/darker_gray"
        android:layout_below="@id/myLogo"
        android:contentDescription="@string/result_image_desc" />

    <LinearLayout
        android:id="@+id/layoutClassification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewResult"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Classification Result"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="24sp"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <!-- TextView for Classification Name -->
            <TextView
                android:id="@+id/textViewTop1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Classification Name"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"/>

            <!-- TextView for Confidence -->
            <TextView
                android:id="@+id/textViewTop1Confidence"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:text="Confidence"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <!-- TextView for Classification Name -->
            <TextView
                android:id="@+id/textViewTop2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Classification Name"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"/>

            <!-- TextView for Confidence -->
            <TextView
                android:id="@+id/textViewTop2Confidence"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:text="Confidence"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <!-- TextView for Classification Name -->
            <TextView
                android:id="@+id/textViewTop3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Classification Name"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"/>

            <!-- TextView for Confidence -->
            <TextView
                android:id="@+id/textViewTop3Confidence"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:text="Confidence"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Tombol untuk mengambil foto -->
    <Button
        android:id="@+id/buttonTakePhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:text="Take a Photo"
        android:textSize="18sp" />
</RelativeLayout>
